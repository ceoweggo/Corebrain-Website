---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Documentaci√≥n",
    path: "/docs",
    children: [
      { title: "API Docs", path: "/docs/api" },
      { title: "SDK", path: "/docs/sdk" },
      { title: "Plataforma del usuario", path: "/docs/platform" },
    ],
  },
  {
    title: "Casos de uso",
    path: "/casos-de-uso",
  },
  {
    title: "Precios",
    path: "/pricing",
  },
  {
    title: "Sobre nosotros",
    path: "/about",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-xl flex items-center">
          <img src="/isotipo.svg" alt="Etedata logo" class="w-8 h-8" />
          <span class="font-bold text-slate-800 dark:text-white">Ete</span><span class="text-slate-500 dark:text-slate-400">data</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800 dark:text-white" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}
                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="http://localhost:8080" style="muted" block size="md">Conectarme</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="http://localhost:8080" size="md" style="primary" class="dark:bg-white dark:text-gray-900 dark:hover:bg-gray-100">Conectarme</Link>
      </div>
    </div>
  </header>
</Container>
