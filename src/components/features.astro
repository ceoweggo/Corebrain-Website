---
// @ts-ignore
import { Icon } from "astro-icon/components";
import { getLanguage, getTranslation } from "../utils/language";

const currentLang = getLanguage();

const features = [
  {
    titleKey: "features.1.title",
    descriptionKey: "features.1.description",
    icon: "bx:bxs-brain",
  },
  {
    titleKey: "features.2.title",
    descriptionKey: "features.2.description",
    icon: "bx:bxs-message-square-dots",
  },
  {
    titleKey: "features.3.title",
    descriptionKey: "features.3.description",
    icon: "bx:bxs-time",
  },
  {
    titleKey: "features.4.title",
    descriptionKey: "features.4.description",
    icon: "bx:bxs-report",
  },
  {
    titleKey: "features.5.title",
    descriptionKey: "features.5.description",
    icon: "bx:bxs-lock-alt",
  },
  {
    titleKey: "features.6.title",
    descriptionKey: "features.6.description",
    icon: "bx:bxs-plug",
  },
];
---

<div class="mt-24 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight" data-i18n="features.title">
    {getTranslation('features.title')}
  </h2>
  <p class="text-lg mt-4 text-slate-600" data-i18n="features.description">
    {getTranslation('features.description')}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg" data-i18n={item.titleKey}>
            {getTranslation(item.titleKey)}
          </h3>
          <p class="text-slate-500 mt-2 leading-relaxed" data-i18n={item.descriptionKey}>
            {getTranslation(item.descriptionKey)}
          </p>
        </div>
      </div>
    ))
  }
</div>
