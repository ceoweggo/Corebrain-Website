---
// @ts-ignore
import { Icon } from "astro-icon/components";
import { getLanguage, getTranslation } from "../utils/language";

const currentLang = getLanguage();

const steps = [
  {
    number: "1",
    titleKey: "how.step1.title",
    descriptionKey: "how.step1.description",
    icon: "bx:bxs-data",
  },
  {
    number: "2",
    titleKey: "how.step2.title",
    descriptionKey: "how.step2.description",
    icon: "bx:bxs-message-alt-detail",
  },
  {
    number: "3",
    titleKey: "how.step3.title",
    descriptionKey: "how.step3.description",
    icon: "bx:bxs-cog",
  },
  {
    number: "4",
    titleKey: "how.step4.title",
    descriptionKey: "how.step4.description",
    icon: "bx:bxs-rocket",
  },
];
---

<div class="mt-24">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-center" data-i18n="how.title">
    {getTranslation('how.title')}
  </h2>
  <div class="grid sm:grid-cols-2 md:grid-cols-4 mt-16 gap-8 md:gap-16">
    {
      steps.map((item) => (
        <div class="flex flex-col items-center">
          <div class="bg-indigo-100 dark:bg-indigo-900 rounded-full p-3 mb-4">
            <Icon name={item.icon} class="text-indigo-500 dark:text-indigo-300 w-8 h-8" />
          </div>
          <h3 class="font-semibold text-lg text-center" data-i18n={item.titleKey}>
            {getTranslation(item.titleKey)}
          </h3>
          <p class="text-slate-500 dark:text-slate-400 text-center mt-2" data-i18n={item.descriptionKey}>
            {getTranslation(item.descriptionKey)}
          </p>
        </div>
      ))
    }
  </div>
</div> 