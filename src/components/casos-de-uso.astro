---
// @ts-ignore
import { Icon } from "astro-icon/components";
import { getLanguage, getTranslation } from "../utils/language";

const currentLang = getLanguage();

const casosDeUso = [
  {
    titleKey: "use-cases.1.title",
    descriptionKey: "use-cases.1.description",
    icon: "bx:bxs-time",
    color: "bg-blue-100",
  },
  {
    titleKey: "use-cases.2.title",
    descriptionKey: "use-cases.2.description",
    icon: "bx:bxs-report",
    color: "bg-green-100",
  },
  {
    titleKey: "use-cases.3.title",
    descriptionKey: "use-cases.3.description",
    icon: "bx:bxs-message-square-dots",
    color: "bg-purple-100",
  },
  {
    titleKey: "use-cases.4.title",
    descriptionKey: "use-cases.4.description",
    icon: "bx:bxs-chart",
    color: "bg-yellow-100",
  },
];
---

<div class="mt-24">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-center" data-i18n="use-cases.title">
    {getTranslation('use-cases.title')}
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center max-w-3xl mx-auto" data-i18n="use-cases.description">
    {getTranslation('use-cases.description')}
  </p>

  <div class="grid sm:grid-cols-2 gap-10 mx-auto max-w-5xl mt-16">
    {
      casosDeUso.map((item) => (
        <div class="flex flex-col p-6 rounded-lg border border-gray-200 hover:shadow-lg transition">
          <div class={`${item.color} p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4`}>
            <Icon class="text-gray-800 w-6 h-6" name={item.icon} />
          </div>
          <h3 class="font-semibold text-xl text-gray-800" data-i18n={item.titleKey}>
            {getTranslation(item.titleKey)}
          </h3>
          <p class="text-slate-500 mt-2 leading-relaxed" data-i18n={item.descriptionKey}>
            {getTranslation(item.descriptionKey)}
          </p>
        </div>
      ))
    }
  </div>
</div> 